@model List<HappyFarmer.Entities.FarmerSlider>
@{
    ViewData["Title"] = "Slider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="clearfix">
    <div align="right">
        <a href="/Admin/CreateSlider"><button class="btn btn-success" btn-xs>Yeni Slider Ekle</button></a>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p style="color:red;">Site Sliderları</p>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Slider Resim</th>
                                <th>Slider İsim</th>
                                <th>Slider Sıra No</th>
                                <th>Slider Durumu</th>
                                <th>Slider URL</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                           {
                            <tr>
                                <td>@item.Id</td>
                                <td><img height="50" width="50" src="~/img/SliderImages/@item.ImagePath" /></td>
                                <td>@item.Name</td>
                                <td>@item.SequenceNumber</td>
                                <td>
                                    @if(@item.Situation == true)
                                    {
                                        <p style="color:green;">Yayında</p>
                                    }

                                    else
                                    {
                                        <p style="color:red;">Yayında Değil</p>
                                    }
                                </td>
                                <td>@item.Url</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="EditSlider" asp-route-id="@item.Id" class="btn btn-success btn-sm mr-2">Düzenle</a>
                                    <form asp-controller="Admin" asp-action="DeleteSlider" method="post" style="display:inline;">
                                        <input type="hidden" name="sliderId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


