@model CategoryListModel
@{
    ViewData["Title"] = "AdminCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<marquee direction=right>
    <h1>Kategoriler Sayfası</h1>
</marquee>
<hr />

@if (ViewBag.Message != null)
{
    <div class="text-success">@ViewBag.Message</div>
}

<div class="clearfix">
    <div align="right">
        <a href="/Admin/CreateCategory"><button class="btn btn-success" btn-xs>Yeni Kategori Ekle</button></a>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p style="color:red;">Çiftçi Kategorileri</p>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Categories)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-success btn-sm mr-2">Düzenle</a>
                                        <form asp-controller="Admin" asp-action="DeleteCategory" method="post" style="display:inline;">
                                            <input type="hidden" name="categoryId" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
