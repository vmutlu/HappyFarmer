@model SliderModel
@{
    ViewData["Title"] = "EditSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<marquee direction=right>
    <h1>Slider Güncelleme Sayfası</h1>
</marquee>
<hr />


@if (ViewBag.ErrorMessage != null)
{
    <div class="text-danger">@ViewBag.ErrorMessage</div>
}
@if (@ViewBag.IncerrectImageExtension != null)
{
    <div style="margin-left:225px;" class="alert alert-danger"><center>@ViewBag.IncerrectImageExtension</center></div>
}
<form asp-controller="Admin" asp-action="EditSlider" method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="ImagePath" class="col-md-2 col-form-label">Slider Resmi</label>
                <div class="col-md-10">
                    <input type="hidden" name="ImageUrl" value="@Model.ImagePath" />
                    <img style="width:750px;height:250px;" src="~/img/SliderImages/@Model.ImagePath" />
                    <input type="file" name="file" class="form-control" />
                    <span asp-validation-for="ImagePath"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">Slider Adı</label>
                <div class="col-md-10">
                    <input asp-for="Name" required="" value="@Model.Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <input type="hidden" name="Id" value="@Model.Id" class="form-control" />


            <div class="form-group row">
                <label asp-for="SequenceNumber" class="col-md-2 col-form-label">Slider Sıra No</label>
                <div class="col-md-10">
                    <input type="number" asp-for="SequenceNumber" required="" value="@Model.SequenceNumber" class="form-control" />
                    <span asp-validation-for="SequenceNumber"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Situation" class="col-md-2 col-form-label">Slider Durum</label>
                <div class="col-md-10">
                    <select name="Situation" class="form-control">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Url" class="col-md-2 col-form-label">Slider URL</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Url" required="" value="@Model.Url" class="form-control" />
                    <span asp-validation-for="Url"></span>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button style="width: 100%; margin-left: 269px;" type="submit" class="btn btn-success">Slider Güncelle</button>
                </div>
            </div>

        </div>
    </div>
</form>
