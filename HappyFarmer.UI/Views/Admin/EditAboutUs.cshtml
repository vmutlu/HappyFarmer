@model AboutUsModel
@{
    ViewData["Title"] = "EditAboutUs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Hakkımızda İçerik Güncelleme Sayfası</h1>
<hr />

@section Scripts{
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });

        CKEDITOR.edit = function (config) {
            config.height = '400px';
        };
    </script>
    <style>
        .ck-editor__editable_inline {
            min-height: 400px;
        }
    </style>
}

<form asp-controller="Admin" asp-action="EditAboutUs" method="post">
    <div class="row">

        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Title" class="col-md-2 col-form-label">Hakkımızda Başlık</label>
                <div class="col-md-8">
                    <input asp-for="Title" required="" value="@Model.Title" class="form-control" />
                    <span asp-validation-for="Title"></span>
                </div>
            </div>

            <input type="hidden" name="Id" value="@Model.Id" class="form-control" />

            <div class="form-group row">
                <label asp-for="Content" class="col-md-2 col-form-label">Hakkımızda İçerik</label>
                <div class="col-md-8">
                    <textarea id="editor" name="Content" rows="40" class="form-control">@Model.Content</textarea>
                    <span asp-validation-for="Content"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Vision" class="col-md-2 col-form-label">Vizyon</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Vision" required="" value="@Model.Vision" class="form-control" />
                    <span asp-validation-for="Vision"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Mission" class="col-md-2 col-form-label">Misyon</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Mission" required="" value="@Model.Mission" class="form-control" />
                    <span asp-validation-for="Mission"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="VideoPath" class="col-md-2 col-form-label">Video URL</label>
                <div class="col-md-8">
                    <input type="text" asp-for="VideoPath" required="" value="@Model.VideoPath" class="form-control" />
                    <span asp-validation-for="VideoPath"></span>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button  style="width:80%; margin-left:269px;" type="submit" class="btn btn-success">Güncelle</button>
                </div>
            </div>

        </div>
    </div>
</form>

