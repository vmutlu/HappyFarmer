@model LoginModel
@{
    ViewData["Title"] = "AddCarrier";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<marquee direction=right>
    <h2 style="color:green;">Yeni Nakliyeci Ekleme Ekranı</h2>
</marquee>

<div class="row">
    <div class="col-md-10">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-controller="Admin" asp-action="AddCarrier" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group row">
                <label asp-for="ImageURL" class="col-md-2 col-form-label">Nakliyeci Resmi</label>
                <div class="col-md-10">
                    <input type="hidden" name="ImageURL" />
                    <input type="file" name="file" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">Adı</label>
                <div class="col-md-10">
                    <input type="text" required name="Name" class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Surname" class="col-md-2 col-form-label">Soyadı</label>
                <div class="col-md-10">
                    <input type="text" required name="Surname" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label">Email Adresi</label>
                <div class="col-md-10">
                    <input type="text" name="Email" required class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-md-2 col-form-label">Telefon Numarası</label>
                <div class="col-md-10">
                    <input type="number" required name="PhoneNumber" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Address" class="col-md-2 col-form-label">Adresi</label>
                <div class="col-md-10">
                    <textarea name="Address" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label">Şifresi</label>
                <div class="col-md-10">
                    <input type="text" required name="Password" class="form-control" />
                </div>
            </div>

            <input type="hidden" name="UserType" class="form-control" value="2" />

            <div class="form-group row">
                <label asp-for="City" class="col-md-2 col-form-label">Şehir</label>
                <div class="col-md-10">
                    <input type="text" name="City" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RecordData" class="col-md-2 col-form-label">Kayıt Tarihi</label>
                <div class="col-md-10">
                    <input type="text" name="RecordData" required value="@DateTime.Now.ToShortDateString()" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" style="width:100%; margin-left:222px;" class="btn btn-success">Nakliyeci Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

