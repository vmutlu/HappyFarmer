@model SecurityInformationModel
@{
    ViewData["Title"] = "CreateInformation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Scripts{
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });

        CKEDITOR.edit = function (config) {
            config.height = '180px';
        };
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor2'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });

        CKEDITOR.edit = function (config) {
            config.height = '180px';
        };
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor3'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });

        CKEDITOR.edit = function (config) {
            config.height = '180px';
        };
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor4'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });

        CKEDITOR.edit = function (config) {
            config.height = '180px';
        };
    </script>
    <style>
        .ck-editor__editable_inline {
            min-height: 180px;
        }
    </style>
}

<br />
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-controller="Admin" asp-action="CreateInformation" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="AdversitingRule" class="col-md-2 col-form-label">İlan Verme Kuralları</label>
                <div class="col-md-8">
                    <textarea id="editor" name="AdversitingRule" rows="40" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TermsOfUse" class="col-md-2 col-form-label">Kullanım Koşulları</label>
                <div class="col-md-8">
                    <textarea id="editor2" name="TermsOfUse" rows="40" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="PrivacyPolicy" class="col-md-2 col-form-label">Gizlilik Politikası</label>
                <div class="col-md-8">
                    <textarea id="editor3" name="PrivacyPolicy" rows="40" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="FAQ" class="col-md-2 col-form-label">SSS</label>
                <div class="col-md-8">
                    <textarea id="editor4" name="FAQ" rows="40" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button style="width:80%; margin-left:265px;" type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
