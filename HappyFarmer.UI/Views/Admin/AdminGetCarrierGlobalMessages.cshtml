@model List<HappyFarmer.Entities.FarmerGlobalMessage>
@{
    ViewData["Title"] = "AdminGetCarrierGlobalMessages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p style="color:red;">Nakliyeci Global Yorumları</p>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Konu</th>
                                <th>Mesaj</th>
                                <td>Onay İşlemi</td>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><center>@item.Id</center> </td>
                                    <td>
                                        <center>
                                            @foreach (var users in ViewBag.Users)
                                            {
                                                @if (item.SenderId == users.Id)
                                                {
                                                    <p>@users.Name @users.Surname</p>
                                                }
                                            }
                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            @switch (Convert.ToInt32(item.Subject))
                                            {
                                                case 10:
                                                    <p>Büyükbaş Hayvan</p>
                                                    break;
                                                case 11:
                                                    <p>
                                                        Küçükbaş Hayvan
                                                    </p>
                                                    break;
                                                case 12:
                                                    <p>
                                                        Kümes Hayvanı
                                                    </p>
                                                    break;
                                                case 13:
                                                    <p>
                                                        Evcil Hayvan
                                                    </p>
                                                    break;
                                                case 14:
                                                    <p>
                                                        Süt
                                                    </p>
                                                    break;
                                                case 15:
                                                    <p>
                                                        Hayvansal Gıda
                                                    </p>
                                                    break;
                                                case 20:
                                                    <p>
                                                        Traktör
                                                    </p>
                                                    break;
                                                case 21:
                                                    <p>
                                                        Tarla
                                                    </p>
                                                    break;
                                                case 22:
                                                    <p>
                                                        Traktör Ekipmanları
                                                    </p>
                                                    break;
                                                case 23:
                                                    <p>
                                                        Sebze
                                                    </p>
                                                    break;
                                                case 24:
                                                    <p>
                                                        Meyve
                                                    </p>
                                                    break;
                                                case 25:
                                                    <p>
                                                        Tahıl Ürünleri
                                                    </p>
                                                    break;
                                                case 26:
                                                    <p>
                                                        Yem & Otsu Bitkiler
                                                    </p>
                                                    break;
                                            }
                                        </center>
                                    </td>
                                    <td><center>@item.MessageContent</center> </td>
                                    <td><center>@item.MessageDate</center> </td>
                                    <td>
                                        @if (item.CheckStatus == true)
                                        {
                                            <p style="color:green;">YAYINDA</p>
                                        }

                                        else
                                        {
                                            <p style="color:red;">YAYINDA DEĞİL</p>
                                        }
                                    </td>
                                    <td>
                                        <center>
                                            @if (item.CheckStatus == true)
                                            {
                                                <a asp-controller="Admin" asp-action="EditGlobalMessagePermission" asp-route-id="@item.Id" asp-route-active="no" asp-route-sender="Carrier" class="btn btn-success btn-sm">Aktif</a>
                                            }

                                            else
                                            {
                                                <a asp-controller="Admin" asp-action="EditGlobalMessagePermission" asp-route-id="@item.Id" asp-route-active="yes" asp-route-sender="Carrier"  class="btn btn-danger btn-sm">Pasif</a>
                                            }
                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            <form asp-controller="Admin" asp-action="DeleteGlobalMessagePermission" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                            </form>
                                        </center>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


