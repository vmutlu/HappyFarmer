@model CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<marquee direction=right>
    <h2 style="color:red;">Kategori Ekleme Ekranı</h2>
</marquee>
<hr />

<div class="row">
    <div style="float:left" class="col-md-8">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">Kategori Adı</label>
                <div class="col-md-10">
                    <input asp-for="Name" required="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" style="width:100%; margin-left:178px;" class="btn btn-success">Kategori Kaydet</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <span style="color:brown;">Güncel Haberler</span>
        <iframe src="https://siteneekle.haber7.com/sondakika-manset.html" frameborder="0" width="472" height="290" framespacing="0" marginheight="0" marginwidth="0" scrolling="no"></iframe>
    </div>
</div>

