@model List<HappyFarmer.Entities.FarmerMultipleProductImages>
@{
    ViewData["Title"] = "AdminGetMultipleProductImages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p style="color:red;">Ürün Çoklu Resim Görüntüleme Ekranı</p>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Çoklu Ürün Resmi</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><img height="50" width="50" src="~/img/ProductMultipleImages/@item.ImageURL" /></td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="AdminDeleteMultiImages" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
