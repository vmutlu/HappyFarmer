@model IEnumerable<SecurityInformationModel>
@{
    ViewData["Title"] = "GetInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li>İlan Verme Kuralları</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-2 col-lg-2">

                    <div class="dashboard_tab_button">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li><a href="#account-details" data-toggle="tab" class="nav-link">İlan Verme Kuralları</a></li>
                            <li><a href="#dashboard" data-toggle="tab" class="nav-link">Kullanım Koşulları</a></li>
                            <li> <a href="#orders" data-toggle="tab" class="nav-link">Gizlilik Politikası</a></li>
                            <li><a href="#downloads" data-toggle="tab" class="nav-link">SSS</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-10 col-lg-10">

                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade" id="account-details">

                            <div class="faq_content_area">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="faq_content_wrapper">
                                                <p>
                                                    @foreach (var item in Model)
                                                    {
                                                        @item.AdversitingRule
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane fade show " id="dashboard">
                            <div class="faq_content_area">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="faq_content_wrapper">
                                                <p>
                                                    @foreach (var item in Model)
                                                    {
                                                        @item.TermsOfUse
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane fade" id="orders">
                            <div class="faq_content_area">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="faq_content_wrapper">
                                                <p>
                                                    @foreach (var item in Model)
                                                    {
                                                        @item.PrivacyPolicy
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="downloads">
                            <div class="faq_content_area">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="faq_content_wrapper">
                                                <p>
                                                    @foreach (var item in Model)
                                                    {
                                                        @item.FAQ
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="address">

                            <div align="right">
                                <a href="/User/UserNewMessage" class="btn btn-info">Yeni Mesaj</a>
                            </div>
                            <br />

                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mesaj Gönderen Ad Soyad</th>
                                        <th>Mesaj Gönderen Telefon No</th>
                                        <th>Mesaj Konusu</th>
                                        <th>Mesaj İçeriği</th>
                                        <th>Mesaj Gönderim Tarihi</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
